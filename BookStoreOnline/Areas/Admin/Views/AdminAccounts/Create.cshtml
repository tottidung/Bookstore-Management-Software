@model BookStoreOnline.Models.NHANVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-body">
    <h2>Thêm người quản trị mới</h2>
</div>
@using (Html.BeginForm(("Create", "AdminAccounts", FormMethod.Post, new { @enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <label for="Name" class="form-label"> Tên người quản trị</label>
            @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">  Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            <label for="DisplayPassword" class="form-label">Mật khẩu sau khi tạo tài khoản</label>
            <input type="text" class="form-control" value="123456789" readonly="readonly" />
        </div>*@
    <div class="mb-3">
        <label for="Role" class="form-label">Quyền hạn</label>
        @Html.DropDownListFor(model => model.Quyen, (SelectList)ViewBag.Role, "Chọn quyền hạn", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
    </div>


    <div class="d-flex justify-content-between align-items-center">
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "color: white !important;" })
        <button type="submit" class="btn btn-primary" style="color: white !important; background-color:black">Thêm</button>
    </div>

}

