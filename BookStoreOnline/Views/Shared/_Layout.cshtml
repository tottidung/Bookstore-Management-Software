                                <a style="color: #000; margin-right: 40px; height: auto; width: auto; box-shadow: none; font-weight: 500; " class="nav-item nav-link " href="@Url.Action("GetAllBook","Category")">Tất cả sản phẩm</a>
                                <a style="color: #000; margin-right: 40px; height: auto; box-shadow: none; font-weight: 500; " class="nav-item nav-link " href="@Url.Action("Index","GioiThieu")">Giới thiệu</a>
                                <a style="color: #000; height: auto; box-shadow: none; font-weight: 500; " class="nav-item nav-link " href="@Url.Action("Index", "LienHe")">Liên hệ</a>
                            </div>
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </div>
